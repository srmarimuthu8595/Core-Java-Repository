package com.srm.collections.queues;

import java.util.concurrent.BlockingQueue;
import java.util.concurrent.PriorityBlockingQueue;

public class CustomPriorityBlockingQueueTester {

	public static void main(String[] args) {
	
		BlockingQueue<BankCustomerDetails> queue = new PriorityBlockingQueue<BankCustomerDetails>();
		 
		try {
			queue.put(new BankCustomerDetails("Tony", 30, 50000));
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		queue.put(new BankCustomerDetails("John", 25, 60000));
		queue.put(new BankCustomerDetails("Alex", 35, 80000));
		queue.put(new BankCustomerDetails("Garry", 23, 99000));
		 
		BankCustomerDetails customer = queue.poll();
		 
		while (customer != null) {
		    System.out.println(customer);
		    customer = queue.poll();
		}
		
		
		

	}

}
