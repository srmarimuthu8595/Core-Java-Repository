package com.srm.thread.synchronization2;

import java.io.FileOutputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;
import java.util.List;


public class AccountDetailsIntoTextFileWriter {

	   
	
	  public void textFileWriter(CustomerAccountDetails obj){
		  
		  CustomerAccountDetails sbaccDetails =new CustomerAccountDetails(1000,"Karuppannan R","Saving Account","SBA888899900","112,Arachalur,Erode-1");
		  CustomerAccountDetails currDetails =new CustomerAccountDetails(1000,"Karuppannan R","Current Account","CCA3300400500","112,Arachalur,Erode-1");
		  
		  List<CustomerAccountDetails> list = new ArrayList<CustomerAccountDetails>();
		  list.add(sbaccDetails);
		  list.add(currDetails);
		
		  try{
			 		  
		  FileOutputStream f=new FileOutputStream("customer.txt");
		   ObjectOutputStream out=new ObjectOutputStream(f); 
		   
		   for(Object obj:list){
			   out.writeObject(obj);  
			   out.flush();  
			   
		    }
		   
		   out.close();  
			f.close();  
		    System.out.println("success");
		   
		  }catch(Exception ex){
			  		  
			  
		  }
					
	}

}
