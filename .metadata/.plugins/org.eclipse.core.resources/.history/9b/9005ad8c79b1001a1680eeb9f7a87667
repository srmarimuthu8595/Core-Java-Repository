package com.srm.thread.synchronization2;

import java.io.FileOutputStream;
import java.io.ObjectOutputStream;

public class AccountDetailsIntoTextFileWriter {
	   
	
	  public void textFileWriter(CustomerAccountDetails obj){
		  
		 try{
			 		  
		   FileOutputStream f=new FileOutputStream("BankCustomer.txt");
		   ObjectOutputStream out=new ObjectOutputStream(f); 
		   
		   out.writeObject(obj);  
		   out.flush();  
			   
		    out.close();  
		    f.close();  
		    
		    System.out.println("success");
		   
		  }catch(Exception ex){
			  		  
			  System.out.println("Exception occured while writing text file "+ex);
			  
		  }finally{
			  
			 System.out.println("==================== Customer Details Writtern Successfully ===================");
		  }
					
	}

}
