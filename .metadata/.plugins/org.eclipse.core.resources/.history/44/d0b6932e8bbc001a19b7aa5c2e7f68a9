package com.srm.spring.app.dao;

import javax.persistence.EntityManagerFactory;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;

import com.srm.spring.app.model.CustomerAddressDetails;
import com.srm.spring.app.model.CustomerDetails;

public class CustomerAddressDAO {
	
	@Autowired
	private EntityManagerFactory entityManagerFactory;
	
	
	public CustomerAddressDetails saveCustomerDetails(CustomerAddressDetails custadddtls) throws Exception{
		try{
			Session session = entityManagerFactory.unwrap(SessionFactory.class).openSession();
			session.beginTransaction();
			session.save(custadddtls);
			session.getTransaction().commit();
		}catch(Exception ex){
			throw ex;
		}
		return custadddtls;
	}
	

}
